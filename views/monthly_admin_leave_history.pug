html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/invoice.css')
    title Monthly Attendance Report
  body
    include header1.pug
    div.table-container Leave History for #{month}/#{year}
        table.table-bordered
            thead
            tr
                th Name
                th Start Date
                th End Date
                th Reason
                th Status
            tbody
            each leave in leaves
                tr
                td= leave.name.trim()
                td= leave.start_date
                td= leave.end_date
                td= leave.reason
                td= leave.status
